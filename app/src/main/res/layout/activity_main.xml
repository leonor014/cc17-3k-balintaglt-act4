<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip Calculator"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:background="#070707"
        android:padding="16dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/bill_amount_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:hint="Bill Amount"
        android:inputType="numberDecimal"
        android:textSize="18sp"
        android:padding="12dp"
        android:minHeight="48dp"
        tools:ignore="Autofill,VisualLintTextFieldSize" />
    android:minHeight="48dp"
    tools:ignore="Autofill" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="How was the service?"
        android:paddingTop="16dp"
        android:textSize="18sp" />

    <RadioGroup
        android:id="@+id/tip_options_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/amazing_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amazing 30%" />

        <RadioButton
            android:id="@+id/good_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good 20%" />

        <RadioButton
            android:id="@+id/ok_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok 10%" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Round up tip?"
            android:textSize="16sp" />

        <Switch
            android:id="@+id/round_up_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:padding="12dp"
            android:minHeight="48dp"
            android:minWidth="48dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#D149096B"
        android:padding="16dp"
        android:text="Calculate"
        android:textColor="#090909"
        android:textSize="18sp"
        tools:ignore="TextContrastCheck,VisualLintButtonSize" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textSize="24sp"
        android:paddingTop="16dp"
        android:gravity="start" />

</LinearLayout>